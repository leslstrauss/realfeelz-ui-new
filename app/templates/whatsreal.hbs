{{view 'whatsreal-view'}} {{!-- <img src="/assets/images/meiz.jpg" id="bg" alt=""> --}}
{{!-- <div id="page-wrap"> --}}
  {{!-- <img src="/assets/images/meiz.jpg" id="bg" alt=""> --}}
  <header>
    <div class="row">
      <div class="small-12 medium-12 large-12 columns">
        <h2><a href="#">RealFeelz</a></h2>
      </div>
    </div>
  </header>

  <div class="row">
    <div class="small-12 medium-12 large-12 columns">
      <div class="form-statments">
        {{!--
        <div class="row">
          <div class="small-12 medium-12 large-12 columns"> --}}
            <form {{action "postStatement" newPost on="submit" }}>
              {{textarea placeholder="what's real for you right now?" class="text-field" value=newPost type="text" autofocus="true" cols="40" maxlength="200" require="true" wrap="hard"}}
              <div id="recaptcha"></div>
              <div class="status-text">
                {{#if verifyingCaptcha}}
                <p>Verifying Captcha...</p>
                {{/if}} {{#if showingCaptcha}}
                <p>Getting a Captcha...</p>
                {{/if}} {{#if captchaVerified }}
                <p>Now that we know you are a human, hit post again to share.</p>
                {{/if}} {{#if tryAgain}}
                <p>Try again...</p>
                {{/if}}
              </div>
              <div class="row">
                <div class="small-12 medium-12 large-12 columns">
                  <button class="button radius" type="submit">Post</button>
                </div>
              </div>
            </form>
            {{!-- </div>
        </div> --}}
      </div>
    </div>
  </div>

  <div class="statement-container">
    <div class="row">
      <div class="small-12 medium-12 large-12 columns">
        <ul>
          {{#each}}
          <p class="truths panel radius">{{body}}</p>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <hr/>
  <div class="row">
    <div class="small-12 medium-12 large-12 columns">
      <p id="copyright">{{#link-to 'index'}}Â©RealFeelz 2014{{/link-to}}</p>
    </div>
  </div>
</div>
</div>
